<div class="min-h-screen flex flex-col items-center justify-center bg-gray-100 px-4">
  <form method="POST" action="/register" class="bg-white shadow-md rounded p-6 max-w-sm w-full">
    <h2 class="text-2xl font-semibold mb-4 text-center">Register</h2>
    <!--username input field-->
    <input 
      name="username" 
      placeholder="Username" 
      required 
      class="w-full p-3 border border-gray-300 rounded mb-4"
    />

    <input 
      name="password" 
      type="password" 
      placeholder="Password" 
      required 
      class="w-full p-3 border border-gray-300 rounded mb-4"
    />
    <!--submit button with bg hover effect and white text-->
    <button 
      type="submit" 
      class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded"
    >
      Register
    </button>
  </form>
  <!--link to homepage with underline upon hovering-->
  <a href="/" class="mt-6 text-blue-600 hover:underline text-sm">← Back to Home</a>
</div>
